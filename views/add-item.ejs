<% include partials/header.ejs %>
    <div class="container">
        <% if (message != '') { %>
            <p class="text-center text-danger"><%= message %></p>
        <% } %>
        <form class="add-item-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="item_name" id="item-name" placeholder="Item Name" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="item_qty" id="item-qty" placeholder="Item Quantity" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="item_amt" id="item-amt" placeholder="Item Amount" required>
                </div>
            </div>
            <button type="submit" class="btn btn-primary float-right">Add Item</button>
        </form>
    </div>
</div>
</body>
</html>